<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akurey.jruiz.ak_retrofit2.MainActivity">

    <Button
        android:id="@+id/loadRepositories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/load_repositories"
        android:gravity="center"
        android:onClick="onClick"
        />
    <Button
        android:id="@+id/loadUserData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/loadRepositories"
        android:text="@string/load_user_data"
        android:gravity="center"
        android:onClick="onClick"
        />

</RelativeLayout>
