<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.akurey.jruiz.sleeptime.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/horaLlegada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="-1dp"
        android:layout_y="14dp"
        android:ems="10"
        android:hint="hora llegada"
        android:inputType="numberDecimal"
        android:text="0" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="98dp"
        android:layout_y="458dp"
        android:text="Calcular Hora"
        android:onClick="calcularHora"
        />

    <EditText
        android:id="@+id/tiempoDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="4dp"
        android:layout_y="353dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_x="2dp"
        android:layout_y="319dp"
        android:text="Tiempo al destino(minutos)" />

    <EditText
        android:id="@+id/tiempoBus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="1dp"
        android:layout_y="276dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_x="4dp"
        android:layout_y="251dp"
        android:text="Tiempo para llegar al centro y agarrar bus(minutos)" />

    <EditText
        android:id="@+id/tiempoAlistarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="3dp"
        android:layout_y="209dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0" />

    <TextView
        android:id="@+id/tiempoBus"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_x="3dp"
        android:layout_y="179dp"
        android:text="Tiempo para alistarse(minutos)" />

    <EditText
        android:id="@+id/tiempoDormir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="2dp"
        android:layout_y="136dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:layout_x="0dp"
        android:layout_y="101dp"
        android:text="Tiempo para dormir" />

    <EditText
        android:id="@+id/minutoLlegada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="59dp"
        android:ems="10"
        android:hint="minutos llegada"
        android:inputType="numberDecimal"
        android:text="0" />

    <TextView
        android:id="@+id/horaDormir"
        android:layout_width="230dp"
        android:layout_height="38dp"
        android:layout_x="38dp"
        android:layout_y="420dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="397dp"
        android:text="Dormir a las" />


</AbsoluteLayout>
